# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Make sure this points to your Neon DB for seeding production)
DATABASE_URL="postgresql://user:password@ep-host.region.neon.tech/neondb?sslmode=require"

# Security Secrets (Change these for production!)
JWT_ACCESS_SECRET="your-super-long-random-access-secret-key-123"
JWT_REFRESH_SECRET="your-super-long-random-refresh-secret-key-456"

# Token Expiry
ACCESS_TOKEN_TTL="15m"
REFRESH_TOKEN_TTL="7d"

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
